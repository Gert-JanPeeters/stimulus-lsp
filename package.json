{
  "name": "stimulus-intellisense",
  "description": "Intelligent Stimulus JS tooling for Visual Studio Code",
  "author": "Marco Roth",
  "license": "MIT",
  "version": "0.1.0",
  "repository": "https://github.com/marcoroth/stimulus-intellisense",
  "publisher": "Marco Roth",
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {}
  },
  "scripts": {
    "vscode:prepublish": "yarn run build",
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint client/**/*.ts server/**/*.ts stimulus-parser/**/*.ts --no-ignore",
    "format": "yarn lint --fix",
    "postinstall": "cd client && yarn install && cd ../server && yarn install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.8",
    "typescript": "^5.2.2"
  }
}
